---
import Layout from "./Layout.astro";
import { UserNav } from "../components/dashboard/UserNav";
import { MainNav } from "../components/dashboard/MainNav";

interface Props {
  title: string;
}

const { title } = Astro.props;
const { user } = Astro.locals;

if (!user) {
  return Astro.redirect("/login");
}
---

<Layout title={title}>
  <div class="flex min-h-screen flex-col bg-muted/10">
    <header
      class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 shadow-sm"
    >
      <div class="mx-auto w-full max-w-screen-xl px-4 md:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between">
          <MainNav client:load />
          <div class="flex items-center space-x-4">
            <UserNav client:load initialUser={user} />
          </div>
        </div>
      </div>
    </header>
    <main class="flex-1 py-6 md:py-8">
      <div class="mx-auto w-full max-w-screen-xl px-4 md:px-6 lg:px-8">
        <div class="rounded-lg border bg-card p-6 shadow-sm">
          <slot />
        </div>
      </div>
    </main>
  </div>
</Layout>

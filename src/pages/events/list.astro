---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import { EventsListWrapper } from '../../components/events/EventsListWrapper';
import { Button } from '@/components/ui/button';
import type { Event } from '../../types';

const { user } = Astro.locals;
const events: Event[] = [
  {
    id: '1',
    participantA: 'Real Madrid',
    participantB: 'Barcelona',
    country: 'Spain',
    league: 'La Liga',
    startTime: '2024-03-20T20:00:00Z',
  },
  {
    id: '2',
    participantA: 'Manchester City',
    participantB: 'Liverpool',
    country: 'England',
    league: 'Premier League',
    startTime: '2024-03-21T15:00:00Z',
  },
];
---

<DashboardLayout title="Events - Sports Event Analyzer">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h3 class="text-lg font-medium">Events</h3>
      <p class="text-sm text-muted-foreground">
        Browse and analyze sports events.
      </p>
    </div>
    <Button variant="default">
      <a href="/events/new">Add Event</a>
    </Button>
  </div>
  <div class="rounded-md border">
    <EventsListWrapper events={events} client:load />
  </div>
</DashboardLayout>

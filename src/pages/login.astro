---
import Layout from '../layouts/Layout.astro';
import LoginForm from '../components/auth/LoginForm';
---

<Layout title="Login - Sports Event Analyzer">
  <div class="container relative h-screen flex-col items-center justify-center grid lg:max-w-none lg:grid-cols-1 lg:px-0">
    <div class="mx-auto flex w-full flex-col justify-center space-y-6 sm:w-[350px]">
      <div class="flex flex-col space-y-2 text-center">
        <h1 class="text-2xl font-semibold tracking-tight">Welcome back</h1>
        <p class="text-sm text-muted-foreground">
          Enter your email and password to sign in to your account
        </p>
      </div>
      <LoginForm client:load />
      <p class="px-8 text-center text-sm text-muted-foreground">
        <a href="/reset-password" class="hover:text-brand underline underline-offset-4">
          Forgot your password?
        </a>
      </p>
    </div>
  </div>
</Layout>
